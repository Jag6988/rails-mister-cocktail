<h1>Hello Cocktail</h1>

<table>
  <thead>
    <tr>
      <th>Cocktail</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= link_to 'Show', c %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>

<input type= "submit" id="start" value="Scan a product">
  <video autoplay="true" id="videoElement"></video>
</input>
